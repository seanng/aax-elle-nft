generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Mint {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  messageTokenId Int // prizeTokenId = messageTokenId + 1
  message        String
  minterEmail    String
  minterWallet   String
  slug           String    @unique
  passcode       String
  ethDonated     String // eth
  openedAt       DateTime?
  mintedAt       DateTime?
  isPrivateSale  Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
